                <RowDefinition Height="25" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="25" />
                <ColumnDefinition />
                <ColumnDefinition Width="25" />
            </Grid.ColumnDefinitions>

            <!-- Row for Heading -->
            <Grid ColumnSpan="3" Background="#228be6" MouseDown="MainGrid_EventHandler">
                <StackPanel Orientation="Horizontal">
                    <Image Source="Assets/logo.png" Width="32" Margin="20 0 0 0" />
                    <Label Foreground="White" Margin="16 0 0 0" FontWeight="Medium" FontSize="18"
                           VerticalContentAlignment="Center">
                        Calendar
                    </Label>
                </StackPanel>

            </Grid>

            <!-- Button to close the application -->
            <Grid Grid.Row="0" Grid.Column="1" ColumnSpan="2">
                <Button Name="CloseButton" Background="Transparent" BorderBrush="Transparent"
                        Click="CloseButton_OnClick" HorizontalAlignment="Right" Width="40">
                    <Image Source="Assets/close.png" Width="22"></Image>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="Transparent"></Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>

                    </Button.Style>
                </Button>
            </Grid>

            <!-- Row for Menu -->
            <Grid Grid.Row="1" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 0 5 0">
                    <Button Background="Transparent" BorderBrush="Transparent" Height="40" Width="40"
                            HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                        <Image Source="Assets/arrowBack.png" Height="24" />
                    </Button>
                    <Button Background="Transparent" BorderBrush="Transparent" Height="40" Width="40"
                            HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                        <Image Source="Assets/arrowForward.png" Height="24" />
                    </Button>
                    <Label Content="September 2022" VerticalContentAlignment="Center" FontWeight="Bold" FontSize="16"
                           Width="140" HorizontalContentAlignment="Right" />
                </StackPanel>
            </Grid>

