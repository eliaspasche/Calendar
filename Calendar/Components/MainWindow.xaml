<Window x:Class="Calendar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calendar"
        mc:Ignorable="d"
        Title="Calendar" Height="1000" Width="1200"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="White"
        Loaded="MainWindow_OnLoaded"
        WindowStartupLocation="CenterScreen">
    
    <Window.Clip>
        <RectangleGeometry Rect="0,0,1200,1000" RadiusX="10" RadiusY="10" />
    </Window.Clip>
    <Border CornerRadius="4">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="80" />
                <RowDefinition Height="40" />
                <RowDefinition />
                <RowDefinition Height="25" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="25" />
                <ColumnDefinition />
                <ColumnDefinition Width="25" />
            </Grid.ColumnDefinitions>

            <!-- Row for Heading -->
            <Grid ColumnSpan="3" Background="#0f324b" MouseDown="MainGrid_EventHandler">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/../Assets/logo.png" Width="32" Margin="20 0 0 0" />
                    <Label Foreground="White" Margin="16 0 0 0" FontWeight="Medium" FontSize="18"
                           VerticalContentAlignment="Center">
                        Calendar
                    </Label>
                </StackPanel>

            </Grid>

            <!-- Button to close the application -->
            <Grid Grid.Row="0" Grid.Column="1" ColumnSpan="2">
                <Button Name="CloseButton"
                        Click="CloseButton_OnClick" HorizontalAlignment="Right" Width="40" Background="Transparent" BorderThickness="0">
                    <Image Source="/../Assets/close.png" Width="22"></Image>
                </Button>
            </Grid>

            <!-- Row for Menu -->
            <Grid Grid.Row="1" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>


                <Button Name="SelectDate" Height="40" Width="120" HorizontalAlignment="Left"
                        Content="Select Date" Click="SelectDate_OnClick" FontWeight="Medium">
                </Button>
                

                <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 0 5 0">
                    <Button Height="40" Width="60"
                            HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="5,0"
                            Click="PrevMonth_OnClick">
                        <Image Source="/../Assets/arrowBack.png" Height="24" />
                    </Button>
                    <Button Height="40" Width="60"
                            HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="5,0"
                            Click="NextMonth_OnClick">
                        <Image Source="/../Assets/arrowForward.png" Height="24" />
                    </Button>
                    <Label Content="Month" VerticalContentAlignment="Center" FontWeight="Bold" FontSize="16"
                           Width="100" HorizontalContentAlignment="Right" Name="CurrentMonth" />
                    <Label Content="Year" VerticalContentAlignment="Center" FontWeight="Bold" FontSize="16"
                           Width="60" HorizontalContentAlignment="Left" Name="CurrentYear" />
                </StackPanel>
            </Grid>

            <!-- Row for Weekdays -->
            <Grid Grid.Row="2" Grid.Column="1">
                <Border CornerRadius="5" Background="#f9f9f9" Margin="2">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Grid Grid.Column="0" Grid.Row="0">
                            <Label Content="Monday" HorizontalContentAlignment="Center"
                                   VerticalContentAlignment="Center"
                                   FontWeight="Bold" />
                        </Grid>
                        <Grid Grid.Column="1" Grid.Row="0">
                            <Label Content="Tuesday" HorizontalContentAlignment="Center"
                                   VerticalContentAlignment="Center"
                                   FontWeight="Bold" />
                        </Grid>
                        <Grid Grid.Column="2" Grid.Row="0">
                            <Label Content="Wednesday" HorizontalContentAlignment="Center"
                                   VerticalContentAlignment="Center" FontWeight="Bold" />
                        </Grid>
                        <Grid Grid.Column="3" Grid.Row="0">
                            <Label Content="Thursday" HorizontalContentAlignment="Center"
                                   VerticalContentAlignment="Center"
                                   FontWeight="Bold" />
                        </Grid>
                        <Grid Grid.Column="4" Grid.Row="0">
                            <Label Content="Friday" HorizontalContentAlignment="Center"
                                   VerticalContentAlignment="Center"
                                   FontWeight="Bold" />
                        </Grid>
                        <Grid Grid.Column="5" Grid.Row="0">
                            <Label Content="Saturday" HorizontalContentAlignment="Center"
                                   VerticalContentAlignment="Center"
                                   FontWeight="Bold" />
                        </Grid>
                        <Grid Grid.Column="6" Grid.Row="0">
                            <Label Content="Sunday" HorizontalContentAlignment="Center"
                                   VerticalContentAlignment="Center"
                                   FontWeight="Bold" />
                        </Grid>
                    </Grid>
                </Border>
            </Grid>

